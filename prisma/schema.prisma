// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Site {
  id    Int    @id @default(autoincrement())
  key   String @unique
  title String
  url   String

  walkers Walker[]
}

model Walker {
  id     Int  @id @default(autoincrement())
  siteId Int?

  name        String
  urlPattern  String
  processor   String // sqlite には enum が無いため、バリデ必須
  urlFilter   String?
  queryFilter String?

  Site Site? @relation(fields: [siteId], references: [id])
}
